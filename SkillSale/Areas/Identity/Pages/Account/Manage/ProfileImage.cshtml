@page
@model SkillSale.Areas.Identity.Pages.Account.Manage.ProfileImageModel
@{
    ViewData["Title"] = "Фото профиля";
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col">
        <partial name="_StatusMessage" for="StatusMessage" />
        <div class="d-flex align-content-center form-group">
            <div class="d-flex mr-3">
                <img src="/@Model.profileImageUrl" class="mb-2" style="width:150px; height:150px; border-radius:100% ; object-fit:cover"></img>
            </div>
            <div class="d-flex">
                <p class="mb-2">На этой странице вы можете загрузить или удалить фото профиля.</p>
            </div>
        </div>

        <form method="post" enctype="multipart/form-data">
            <input type="file" class="form-control mb-3" name="file"/>
            <button class="btn btn-primary" type="submit" value="Upload">Загрузить</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}