@using SkillSale.Enums
@using SkillSale.Extensions
@model SkillSale.Models.Resume

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Resume</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DesiredPosition" class="control-label"></label>
                <input asp-for="DesiredPosition" class="form-control" />
                <span asp-validation-for="DesiredPosition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salary" class="control-label"></label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EducationLevel" class="control-label"></label>
                <select asp-for="EducationLevel" class="form-control">
                    @foreach (var value in Enum.GetValues(typeof(EducationLevel)))
                    {
                        <option value="@value">@(((EducationLevel)value).GetDisplayName())</option>
                    }
                </select>
                <span asp-validation-for="EducationLevel" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="WorkExperience" class="control-label"></label>
                <select asp-for="WorkExperience" class="form-control">
                    @foreach (var value in Enum.GetValues(typeof(WorkExperience)))
                    {
                        <option value="@value">@(((WorkExperience)value).GetDisplayName())</option>
                    }
                </select>
                <span asp-validation-for="WorkExperience" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AboutMe" class="control-label"></label>
                <input asp-for="AboutMe" class="form-control" />
                <span asp-validation-for="AboutMe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
