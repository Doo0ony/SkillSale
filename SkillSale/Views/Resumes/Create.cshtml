@using SkillSale.Enums
@using SkillSale.Extensions
@model SkillSale.Models.Resume

@{
    ViewData["Title"] = "Create";
}

<div class="hero-wrap hero-wrap-2" style="background-image: url('../images/bg_1.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-end justify-content-start">
            <div class="col-md-12 ftco-animate text-center mb-5">
                <p class="breadcrumbs mb-0"><span class="mr-3"><a asp-action="Home" asp-area="Index">Главная <i class="ion-ios-arrow-forward"></i></a></span> <span>Job Post</span></p>
                <h1 class="mb-3 bread">Создать резюме</h1>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section bg-light">
    <div class="container">
        <form asp-action="Create">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-12 col-lg-8 mb-5">

                    <div class="p-5 bg-white">
                        <h3 class="h5 text-black mb-3">Основная информация</h3>
                        <div class="row form-group">
                            <div class="col-md-12 mb-3 mb-md-0">
                                <div class="form-group">
                                    <label asp-for="DesiredPosition" class="control-label">Желаемая должность</label>
                                    <input asp-for="DesiredPosition" class="form-control" />
                                    <span asp-validation-for="DesiredPosition" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row form-group">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Salary" class="control-label">Зарплата (от)</label>
                                    <input asp-for="Salary" class="form-control" />
                                    <span asp-validation-for="Salary" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row form-group">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="WorkExperience" class="control-label">Опыт работы</label>
                                    <select asp-for="WorkExperience" class="form-control">
                                        @foreach (var value in Enum.GetValues(typeof(WorkExperience)))
                                        {
                                            <option value="@value">@(((WorkExperience)value).GetDisplayName())</option>
                                        }
                                    </select>
                                    <span asp-validation-for="WorkExperience" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row form-group">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="WorkStatus" class="control-label">Статус занятости</label>
                                    <select asp-for="WorkStatus" class="form-control">
                                        @foreach (var value in Enum.GetValues(typeof(WorkStatus)))
                                        {
                                            <option value="@value">@(((WorkStatus)value).GetDisplayName())</option>
                                        }
                                    </select>
                                    <span asp-validation-for="WorkStatus" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row form-group">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="EducationLevel" class="control-label">Уровень образования</label>
                                    <select asp-for="EducationLevel" class="form-control">
                                        @foreach (var value in Enum.GetValues(typeof(EducationLevel)))
                                        {
                                            <option value="@value">@(((EducationLevel)value).GetDisplayName())</option>
                                        }
                                    </select>
                                    <span asp-validation-for="EducationLevel" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row form-group">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="AboutMe" class="control-label">О себе</label>
                                    <textarea asp-for ="AboutMe" class="form-control" id="exampleFormControlTextarea1" rows="4"></textarea>
                                    <span asp-validation-for="AboutMe" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row form-group">
                            <div class="col-md-12 mb-3 mb-md-0">
                                <input type="submit" value="Сохранить" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="p-4 mb-3 bg-white">
                        <h3 class="h5 text-black mb-3">Контактная информация</h3>
                        <p class="mb-4">
                            <div class="form-group">
                                <label asp-for="Location" class="control-label">Область поиска</label>
                                <select asp-for="Location" class="form-control">
                                    @foreach (var value in Enum.GetValues(typeof(Location)))
                                    {
                                        <option value="@value">@(((Location)value).GetDisplayName())</option>
                                    }
                                </select>
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>
                        </p>

                        <p class="mb-4">
                            <div class="form-group">
                                <label asp-for="Phone" class="control-label">Телефон</label>
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </p>

                        <p class="mb-0">
                            <div class="form-group">
                                <label asp-for="Email" class="control-label">Электронный адрес</label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </p>

                    </div>

                    <div class="p-4 mb-3 bg-white">
                        <h3 class="h5 text-black mb-3">Дополнительно</h3>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ipsa ad iure porro mollitia architecto hic consequuntur. Distinctio nisi perferendis dolore, ipsa consectetur</p>
                        <p><a href="#" class="btn btn-primary py-2 px-4">Ещё</a></p>
                    </div>
                </div>
            </div>
        </form>
    </div>
    </div>
</section>

<section class="ftco-section-parallax">
    <div class="parallax-img d-flex align-items-center">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-md-7 text-center heading-section heading-section-white ftco-animate">
                    <h2>Subcribe to our Newsletter</h2>
                    <p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts. Separated they live in</p>
                    <div class="row d-flex justify-content-center mt-4 mb-4">
                        <div class="col-md-12">
                            <form action="#" class="subscribe-form">
                                <div class="form-group d-flex">
                                    <input type="text" class="form-control" placeholder="Enter email address">
                                    <input type="submit" value="Subscribe" class="submit px-3">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
